{% extends 'layouts/app.twig' %}
{% block title %}
    Register
{% endblock %}
{% block header %}
	{% include "logo.twig" %}
{% endblock %}
{% block content %}
    <div class="large centered">
        <div class="form small-form centered">
            {# <form method="POST" action={{ path_for('register') }}> #}
                <h1>Register</h1>
                <div id="data-section"></div>{# 
                <div class="temp-error-window">:)</div> #}
                <label class="form-label" for="username">Username</label>
                <input id="username" name="username" class="form-textinput" type="text" placeholder="USERNAME" tabindex="0"/>
                <label class="form-label" for="firstname">First name</label>
                <input id="firstname" name="firstname" class="form-textinput" type="text" placeholder="FIRST NAME" tabindex="1"/>
                <label class="form-label" for="lastname">Last name</label>
                <input id="lastname" name="lastname" class="form-textinput" type="text" placeholder="LAST NAME" tabindex="2"/>
                <label class="form-label" for="password">Password</label>
                <input id="password" name="password" class="form-textinput" type="password" placeholder="PASSWORD" tabindex="3"/>
                <label class="form-label" for="email">Email</label>
                <input id="email" name="email" class="form-textinput" type="email" placeholder="EMAIL" tabindex="4"/>
                <button id="register" class="form-button" type="submit" tabindex="5">REGISTER</button>
                <a class="form-link" href={{ path_for('login') }} tabindex="6">Already have an account</a>
                <a class="form-link" href={{ path_for('reset') }} tabindex="7">Forgot Password ?</a>
            {# </form> #}
        </div>
    </div>
    <script src=/public/js/register.js></script>
{% endblock %}
{% block footer %}
    {% include "footer.twig" %}
{% endblock %}
